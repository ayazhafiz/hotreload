{
  "compilerOptions": {
    "target": "ES2016",                         
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM"],
    "resolveJsonModule": true,

    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": ["src/*.ts"]
}
